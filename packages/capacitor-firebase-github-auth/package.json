{
  "name": "capacitor-firebase-github-auth",
  "version": "0.1.0",
  "description": "capacitor plugin for firebase authentication with github provider",
  "main": "dist/esm/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "unpkg": "dist/plugin.js",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "react-scripts test"
  },
  "author": "uraway",
  "license": "MIT",
  "devDependencies": {},
  "peerDependencies": {
    "@capacitor/core": "^2.4.7",
    "firebase": "^8.0.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorFirebaseGithubAuth.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "git@github.com:uraway/capacitor-firebase-github-plugin.git"
  },
  "bugs": {
    "url": "git@github.com:uraway/capacitor-firebase-github-plugin.git/issues"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)"
    ]
  }
}
